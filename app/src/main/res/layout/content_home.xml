<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash4"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:background="@color/common_google_signin_btn_text_dark_default"
    tools:context=".home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/complaint1"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#B5C30606"
            app:cardCornerRadius="15dp"
            tools:cardBackgroundColor="@color/common_google_signin_btn_text_dark_default">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Button
                    android:id="@+id/complaint"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Add Complaint"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/ut1"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#B5C30606"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Button
                    android:id="@+id/ut"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Download Undertaking"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/co1"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#B5C30606"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Button
                    android:id="@+id/co"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Emergency-Contacts"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/stat1"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/complaint1"
            android:elevation="10dp"
            android:layout_marginTop="350dp"
            app:cardBackgroundColor="#866E6E6E"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/stat"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:hint="Enter Complaint ID to check Status"
                    android:inputType="textNoSuggestions|number"
                    android:textColorHint="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="12sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/sub1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/complaint1"
            android:layout_marginTop="350dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#B5C30606"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Button
                    android:id="@+id/sub"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Check"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/button3"
            android:layout_width="177dp"
            android:layout_height="58dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="450dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/side_nav_bar_2"
            android:fontFamily="normal"
            android:text="Emergency-Call"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="16dp" />
    </RelativeLayout>

</ScrollView>